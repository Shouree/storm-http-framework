use ui;
use core:geometry;
use core:io;
use progvis:net;
use graphics;

dialog ProblemsDlg {
	public Action? action;

	layout Grid {
		expandCol: 0;
		ListView list(["A", "B", "C"]) {}
	}

	init(Client client, progvis:Settings settings) {
		init("Problems", Size(600, 500)) {}

		for (Nat i = 0; i < 50; i++) {
			list.add(["Row ${i}", "B", "C"]);
		}

		spawn remove();
	}

	void remove() {
		for (Nat i = 0; i < 30; i++) {
			sleep(1 s);
			list.remove(0);
		}
	}
}
