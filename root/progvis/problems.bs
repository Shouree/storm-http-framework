use ui;
use layout;
use core:geometry;
use progvis:net;

dialog ProblemsDlg {
	layout Grid {
		wrapCols: 3;
		expandCol: 1;

		RadioButton a("One") {}
		RadioButton b("Two") {}
		CheckButton c("Three") {}
	}

	private Client client;

	init(Client client) {
		init("Problems", Size(500, 400)) {
			client = client;
		}

		a.group = b.group;
		c.checked = true;
	}
}
