use graphics;
use ui;
use core:lang;
use lang:bs:macro;

/**
 * Presentation.
 */
class Presentation on Render {
	// Title.
	Str title;

	// Slides.
	Slide[] slides;

	// Background color. (replace with brush?)
	Color bg;

	// Background image (if any).
	Image? bgImage;

	// Foreground color.
	Color text;

	// Package to reload.
	Package reload;

	// Show timer?
	Bool showTimer;

	// Show page number?
	Bool showPage;

	// Create.
	ctor(Str title) {
		init() {
			title = title;
			bg = white;
			text = black;
			reload = named{present};
		}
	}

	// Add a slide.
	void add(Slide slide) {
		slides << slide;
		slide.number = slides.count;
	}

	// Temporary solution to safely set the background image from other threads.
	void setBg(Image image) {
		bgImage = image;
	}

}

