use lang;
use core:io;
use core:lang;
use lang:bs:macro;
use lang:bnf;

PkgReader reader(Url[] files, Package pkg) {
	FilePkgReader(files, pkg, &createFile(Url, Package));
}

FileReader createFile(Url file, Package pkg) {
	SReader(file, pkg);
}

class SReader extends FileReader {
	ctor(Url file, Package pkg) {
		init(file, pkg);
	}

	Rule rootRule() {
		named{SRoot};
	}
}
