// Testing non-context-free grammar in the syntax language.

delimiter = SDelim;
void SDelim();
SDelim : "[ \n\r\t]+";

void SBlock();
SBlock : "{", (SStmt,)* "}";

void SStmt();
SStmt : "a";
SStmt : "b";
SStmt : SBlock;


// Syntax extension: add a new block where 'c' may appear!
SStmt : SExtraC;

void SExtraC();
SExtraC : "extra c", SBlock;
SExtraC..SStmt : "c";


// We can also use an additional production.
SStmt : SExtraD;

void SExtraD();
SExtraD : "extra d", SBlock;
SExtraD..SStmt : "d";
