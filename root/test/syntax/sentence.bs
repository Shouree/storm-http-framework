use core:debug;
use core:io;
use lang:syntax;

// Type for storing a sentence.
class Statement {
	SStr noun;
	SStr verb;

	ctor(SStr noun, SStr verb) {
		init() {
			noun = noun;
			verb = verb;
		}
	}
}



void testSentence() {
	// Parse this:
	Str s = "do birds fly?";
	print("Parse: " # s);

	Parser<Sentence> parser;
	parser.parse(s, Url());
	print("Used " # parser.stateCount # " states.");
	if (parser.hasError)
		parser.throwError;
	print("Syntax tree: " # parser.tree);
}

void testEmpty() {
	Str s = "()";
	Parser<SParen> parser;
	parser.parse(s, Url());
	print("Used " # parser.stateCount # " states.");
	if (parser.hasError)
		parser.throwError;
}
