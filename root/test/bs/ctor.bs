use core:debug;

class CtorClass {

	Int a;
	Dbg b;

	ctor() {
		super() {
			a = 20;
			b = 30;
		}
	}

	ctor(Int a) {
		super() {
			a = a;
			b = a * 2;
		}
	}

}


Int ctorTest() {
	CtorClass c;
	c.a + c.b.get;
}

Int ctorTest(Int v) {
	CtorClass c(v);
	c.a + c.b.get;
}

class CtorBase {

	Int base;

	ctor(Int v) {
		super() { base = v; }
	}

	Int value() {
		base;
	}

}

class CtorDerived extends CtorBase {

	Int der;

	ctor(Int a, Int b) {
		super(a) { der = b; }
		// comments here should work!
	}

	Int value() {
		base + der;
	}

}


Int ctorDerTest(Int v) {
	CtorDerived z(v, v * 2);
	z.value;
}
